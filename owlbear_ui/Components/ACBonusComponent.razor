
<label>
    <input type="checkbox" @bind="IsFormToggled" /> Use an ability modifier?
</label>

@if (IsFormToggled)
{
    <div class="form-group">
        <label for="select-stat">Select a stat:</label>
        <select id="select-stat" @bind="SelectedStat">
            <option value="STR">STR</option>
            <option value="DEX">DEX</option>
            <option value="CON">CON</option>
            <option value="INT">INT</option>
            <option value="WIS">WIS</option>
            <option value="CHA">CHA</option>
        </select>
    </div>
}
else
{
    <div class="form-group">
        <label for="input-number">Enter AC Bonus:</label>
        <input type="number" id="input-number" @bind="NumberInput" />
    </div>
}

@code {
    bool IsFormToggled { get; set; } = false;
    int NumberInput { get; set; }
    string SelectedStat { get; set; } = "STR";

    void SubmitForm()
    {
        if (IsFormToggled)
        {
            // Code to handle form submission with a dropdown goes here
            Console.WriteLine($"Form submitted with stat: {SelectedStat}");
        }
        else
        {
            // Code to handle form submission with a number input goes here
            Console.WriteLine($"Form submitted with value: {NumberInput}");
        }
    }
}
